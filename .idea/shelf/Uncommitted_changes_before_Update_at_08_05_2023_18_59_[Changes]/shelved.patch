ay: flex;\n  flex-direction: column;\n  width: 30%;\n  gap: 0.3rem;\n}\n\ninput[type=\"submit\"] { //Only apply to the submit button/input\n  width: 35%;\n  border: 2px solid transparent;\n  background: $taberu-orange;\n\n  &:hover {\n    background-color: $taberu-white;\n    border: 2px solid #e0383e;\n  }\n}\ninput, textarea {\n  padding: 0.5rem;\n  border-radius: 0.5rem;\n\n  &:not(input[type=\"submit\"]) {\n    border: 1px solid $taberu-orange;\n    width: 100%;\n  }\n}\n\ninput, textarea {\n  background-color: $taberu-white;\n\n  &:hover {\n\n    &::placeholder {\n      color: $taberu-orange;\n    }\n  }\n\n  font-size: large;\n  color: rgba(17, 43, 60, 0.7);\n\n  &::placeholder {\n    font-family: Maagkramp, sans-serif;\n  }\n}\n\nselect, option {\n  background-color: $taberu-white;\n  color: rgba(17, 43, 60, 0.44);\n  height: 2.2rem;\n  border: 1px solid $taberu-orange;\n  padding: 0.5rem;\n  border-radius: 0.5rem;\n  font-family: Maagkramp, sans-serif;\n  font-size: 1.2rem;\n  &:hover {\n    color: $taberu-orange;\n  }\n}\n\n.all-generated-cards {\n  min-height: fit-content;\n  width: 80%;\n  padding: 5vh 10% 0 10%;\n  display: flex;\n  justify-content: center;\n  flex-basis: 30%;\n  flex-wrap: wrap;\n  gap: 2rem;\n}\n\n.generated-card {\n  display: flex;\n  flex-direction: column;\n  justify-content: center;\n  align-items: center;\n  gap: 0.3rem;\n  height: 12rem;\n  min-width: fit-content;\n  width: 15rem;\n  padding: 0.5rem;\n  background-color: $taberu-orange;\n  border-radius: 10px;\n  &:hover {\n    opacity: .7;\n    cursor: pointer;\n  }\n}\n\n/*-----------FOOTER------------*/\nfooter {\n  width: 100%; height: fit-content;\n  margin-top: 5rem;\n  background-color: $taberu-white;\n  display: flex;\n  align-items: end;\n  color: $taberu-black;\n  font-size: 1.8em;\n  flex-grow: 1;\n  span { //TODO remove link decoration\n    text-decoration: none;\n    color: $taberu-black\n  }\n  a {\n    &:hover {\n      opacity: .7;\n    }\n    &:active {\n      color: $taberu-orange;\n    }\n  }\n}\n\n#footer_infos_container {\n  width: 100%;\n  background-color: #EBEBEB;\n  padding-top: 1rem;\n}\n\n#footer_infos_titles {\n  width: 100%;\n  display: flex;\n  justify-content: space-around;\n  margin-bottom: 2rem;}\n\n#footer_infos_descriptions {\n  width: 100%;\n  display: flex;\n  justify-content: space-around; div {\n    width: 20%; min-width: fit-content;\n    display: flex;\n    flex-direction: column;\n    gap: 1rem;\n  }\n}\n\n/*--------ANIMATIONS---------*/\n\n/*--------Some general animation---------*/\n\n//the half border\n\na.underlined {\n  position: relative;\n  transition: 0.3s;\n  &::after {\n    content: \"\";\n    position: absolute;\n    height: 0.35rem;\n    width: 60%;\n    bottom: -0.5rem;\n    left: 0;\n    border-radius: 10px;\n    transition: 0.25s;\n    background-color: transparent;\n  }\n  &:hover::after {\n    background-color: $taberu-orange;\n  }\n  &.nav-txt-active::after {\n    background-color: $taberu-orange;\n  }\n}\n\n#animated-burger {\n  fill: $taberu-black;\n  &:hover {\n    fill: $taberu-orange;\n  }\n}\n\n.burger-active {\n  overflow: visible;\n  transition: .3s;\n  transform-origin: center;\n  transform: rotate(90deg);\n  path {\n    &:nth-child(1) {\n      transform: translateY(2rem);\n    }\n    &:nth-child(3) {\n      transform: translateY(-2rem);\n    }\n  }\n}\n\n//animations\n\n@keyframes pulseMap {\n\n  0% {\n    opacity: 0;\n    transform: scale(0);\n  }\n\n  25% {\n    opacity: 0.4;\n  }\n\n  100% {\n    transform: scale(1);\n  }\n\n}\n\n@keyframes pulse {\n\n  25% {\n    opacity: 0.4;\n  }\n\n  100% {\n    transform: scale(1);\n  }\n\n}\n\n@keyframes easeAnimation {\n\n  0% {\n    opacity: 0;\n    display: none;\n  }\n\n  50% {\n    opacity: .5;\n    display: inline-flex;\n  }\n\n  100% {\n    opacity: 1;\n    display: inline-flex;\n  }\n\n}\n\n@keyframes floating {\n\n  0% {\n    transform: translatey(0);\n  }\n\n  50% {\n    transform: translatey(-10px);\n  }\n\n  100% {\n  